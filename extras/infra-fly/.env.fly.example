# Fly.io Secrets Configuration
# Copy this file to .env.fly and fill in your values
# Run: ./scripts/fly-secrets.sh to apply

# App names (required)
FLY_APP_API=myapp-api
FLY_APP_WEB=myapp-web

# Region (https://fly.io/docs/reference/regions/)
FLY_REGION=nrt

# Backend secrets
DATABASE_URL=postgresql://user:password@your-vps-ip:5432/appdb?sslmode=require
SECRET_KEY=your-secret-key-here

# Frontend build-time env (optional)
VITE_API_URL=https://myapp-api.fly.dev

# GitHub token for deploy notifications (optional)
# Generate at: https://github.com/settings/tokens (repo scope)
GH_TOKEN=ghp_xxxxxxxxxxxx
